{
  "name": "solthron-extension",
  "version": "1.5.0",
  "description": "Solthron Chrome Extension - Modular Build",
  "scripts": {
    "build": "node build-simple.js",
    "watch": "nodemon --watch src --exec 'npm run build'",
    "deploy": "npm run build && mv content.js content-old.js && mv content-new.js content.js"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
